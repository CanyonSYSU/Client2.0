.indent_page_container {
  width: 100%;
  height: 100%;
  position: absolute;
  bottom: 0;
  left: 0;
}

.indent_item_container {
  width: 100%;
  background-color: white;
  margin-top: 30rpx;
  padding: 10rpx 20rpx 35rpx 20rpx;
  box-sizing: border-box;
}

.indent_top_container {
  font-size: small;
  width: 100%;
  border-bottom: 1px solid #EEE;
  padding: 5rpx 0 20rpx 0;
}

.indent_item {
  display: flex;
  justify-content: space-between;
  padding: 0 40rpx 10rpx 40rpx;
}

.indent_food {
  margin-top: 5px;
}

.indent_button_container {
  width: 100%;
  height: 80rpx;
  padding: 20rpx 20rpx 0 0;
  box-sizing: border-box;
}

.evaluate_button {
  width: 120rpx;
  height: 60rpx;
  border: 1px solid #ccc;
  text-align: center;
  line-height: 60rpx;
  font-size: medium;
  float: right;
}

.indent_total {
  width: 100%;
  text-align: right;
  box-sizing: border-box;
  padding: 30rpx 40rpx 10rpx 0;
}

.total_num {
  font-weight: 700;
}